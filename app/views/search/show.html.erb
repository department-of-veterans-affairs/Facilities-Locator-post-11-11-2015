<style>
  body { margin:0; padding:0; }
  #map { height:700px; width:100%; }
</style>

<% provide(:title, "Home") %>
<div id="content" class="interior">
  <a id="content" href="#content" class="sr-only">Content starts here.</a>

  <div class="splash">
    <div class="row">
      <div class="small-12 columns">
        <ul class="breadcrumbs" role="menubar" aria-label="Primary">
          <li class="active"><h2>Service And Facility Locator</h2></li>
        </ul>
      </div>
    </div>
  </div>
    </div>
  <script src='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.js'></script>
  <link href='https://api.mapbox.com/mapbox.js/v2.3.0/mapbox.css' rel='stylesheet' />
  
   <div class="section one mapcontainer">

     <div class="small-4 column">
       
       <div class="search-info"><!---Start Search Information -->
          <div class="text-input nowrap">
           <input id="search_location" type="text" placeholder="This should be the searched address"></div>
         <div class="breadcrumb-buttons">
            <button class="usa-button-outline active-crumb">Health&nbsp;x</button>
            <button class="usa-button-outline active-crumb">Service 1&nbsp;x</button>
            <button class="usa-button-outline active-crumb">Service 2&nbsp;x</button>
<button class="usa-button active-crumb" data-options="align:right" data-dropdown="drop">Refine Results</button>
           </div>
          
       </div><!---End Search Information -->
       
       
       <!---Start Facilities List -->
       <div class="facilities-list">
        <ul id="facilitiesList" aria-live="polite" aria-relevant="additions removals"></ul>
         </div><!---End Facilities List -->
     </div><!-- End left Column -->
     
     <div class="small-8 column nopad-left-right">
      <div id='map'></div>
     </div>


<div id="drop" class="[tiny small medium large content]f-dropdown" data-dropdown-content>
    <div class="refinements-panel">
        <div class="text-input nowrap">
           <input id="search_location" type="text" placeholder="Search for a location">
        </div>
        <select id="administration_selection">
          <option value="Health">Health</option>
          <option value="Benefits">Benefits</option>
          <option value="Cemetaries">Cemetaries</option>
        </select> 
        <select multiple id="service_level_1_selection">
          <option value="All" selected>All</option>
        </select>
        <select multiple id="service_level_2_selection">
          <option value="All" selected>All</option>
        </select>
        <button type="button" id="search" class="btn btn-sm btn-tab">Search</button>
      </div>
     </div>
  </div><!-- End Section One -->