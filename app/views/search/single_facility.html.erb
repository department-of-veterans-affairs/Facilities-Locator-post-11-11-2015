<% provide(:title, "Single Facility") %>
<div id="content" class="interior">
  <a id="content" href="#content" class="sr-only">Content starts here.</a>
  <%= render 'layouts/breadcrumbs' %>
</div> 

<div class="section one">
    <div class="row">
        <div class="small-12 column">
<!--            <h2><%= @facility.Location_Descriptive_Name_Common_Name %></h2>-->
            <h2><%= @facility.Official_Station_Name %></h2>
        </div>
    </div>
    <div class="row">
  <div class="medium-4 columns">
      <h6>Facility Details</h6>
<!--
      <span class="facility-detail-label">ID:</span><%= @facility.ID %><br>
      <span class="facility-detail-label">Name:</span><%= @facility.Official_Station_Name %><br>
-->
<!--      <span class="facility-detail-label">Common_Name</span>-->
<h5>Street Address:</h5>
      <p class="facility-details">
          
<!--      <span class="facility-detail-label">Classification</span><%= @facility.Classification %><br>-->
<!--      <span class="facility-detail-label">Street_Address</span>-->
          <%= @facility.Street_Address %><br>
          <% if @facility.Suite_Building_Number %>
            <%= @facility.Suite_Building_Number %><br>
        <% else %>
    <!-- <p>No Suite Number</p> -->
        <% end %>
          <%= @facility.City %>, <%= @facility.State %> <%= @facility.Zip_Code %>
        <h5>Phone:</h5>
      <p class="facility-details">
      <table>
       <tr> 
      <td class="facility-detail-label">Main Number:</td><td class="facility-detail-label"><%= @facility.Station_Phone_Number %></td>
        </tr>
        <tr> 
      <td class="facility-detail-label">Fax:</td><td class="facility-detail-label"><%= @facility.Station_Fax_Number %></td>
        </tr>
        <tr> 
      <td class="facility-detail-label">After Hours:</td><td class="facility-detail-label"><%= @facility.After_Hours_Phone_Number %></td>
        </tr>
        <tr> 
      <td class="facility-detail-label">Pharmacy:</td><td class="facility-detail-label"><%= @facility.Pharmacy_Phone_Number %></td>
        </tr>
        <tr> 
      <td class="facility-detail-label">Enrollment Coordinator:</td><td class="facility-detail-label"><%= @facility.Enrollment_Coordinator_Phone_Number %></td>
        </tr>
        <tr> 
      <td class="facility-detail-label">Patient Advocate:</td><td class="facility-detail-label"><%= @facility.Patient_Advocate_Phone_Number %></td>
          </tr>
        </table>
      <p></p>
 
         <h5>Hours of Operation:</h5>

        <table>
        <tr>    
      <td  class="facility-detail-label">Monday:</td><td class="facility-detail-label"><%= @facility.Monday_Hours %></td>
        </tr>
        <tr> 
      <td  class="facility-detail-label">Tuesday:</td><td class="facility-detail-label"><%= @facility.Tuesday_Hours %></td>
        </tr>
        <tr> 
      <td  class="facility-detail-label">Wednesday:</td><td class="facility-detail-label"><%= @facility.Wednesday_Hours %></td>
        </tr>
        <tr> 
      <td  class="facility-detail-label">Thursday:</td><td class="facility-detail-label"><%= @facility.Thursday_Hours %></td>
        </tr>
        <tr> 
      <td  class="facility-detail-label">Friday:</td><td class="facility-detail-label"><%= @facility.Friday_Hours %></td>
        </tr>
        <tr> 
      <td  class="facility-detail-label">Saturday:</td><td class="facility-detail-label"><%= @facility.Saturday_Hours %></td>
        </tr>
        <tr> 
     </table>
      <td class="facility-detail-label">Sunday:</td><td class="facility-detail-label"><%= @facility.Sunday_Hours %></td>
        </tr> 
      <p class="facility-details"><span class="facility-detail-label">Note: </span><%= @facility.Hours_Note %></p>

    </div>
    <div class="medium-4 columns">
    <h6>Services at this Facility</h6>
    <table>
<!--
      <tr>
        <th>Service Level 1</th>
        <th></th>
        <th>Service Level 2</th>
      </tr>
-->

      <% @services.each do |service| %>
          <tr>
            <td class="facility-detail-label"><%= service.Service_Level_1 %></td>
